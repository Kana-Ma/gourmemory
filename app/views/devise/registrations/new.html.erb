<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :nickname, 'ニックネーム' %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :email, 'メールアドレス' %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password, 'パスワード' %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :prefecture_id, '都道府県' %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :introduction, '自己紹介' %>
    </div>
    <%= f.text_area :introduction, placeholder: '自己紹介や好みの食べ物について記入してください（任意）' %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
