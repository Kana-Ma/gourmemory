<%= render 'shared/header' %>

<div class='main-content'>
  <div class='shop-detail'>
    <div class='name'>
      <span>
        新規登録
      </span>
    </div>

    <div class='form-area'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :nickname, 'ニックネーム' %>
            <span class="indispensable">必須</span>
          </div>
          <div class='form-size'>
            <%= f.text_field :nickname, class:"small-form" %>
            <p class='info-text'>※10文字以内</p>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :email, 'メールアドレス' %>
            <span class="indispensable">必須</span>
          </div>
          <div class='form-size'>
            <%= f.email_field :email, class:"small-form", autofocus: true %>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :password, 'パスワード' %>
            <span class="indispensable">必須</span>
          </div>
          <div class='form-size'>
            <%= f.password_field :password, class:"small-form", placeholder:"6文字以上の半角英数字" %>
            <p class='info-text'>※英数字混合、6文字以上</p>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :password_confirmation, 'パスワード（確認）' %>
            <span class="indispensable">必須</span>
          </div>
          <div class='form-size'>
            <%= f.password_field :password_confirmation, class:"small-form" %>
            <p class='info-text'>※同じパスワードを入力して下さい</p>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :prefecture_id, '都道府県' %>
            <span class="indispensable">必須</span>
          </div>
          <div class='form-size'>
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-form"}) %>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :introduction, '自己紹介' %>
          </div>
          <div class='form-size'>
            <%= f.text_area :introduction, placeholder: '自己紹介や好みの食べ物について記入してください（任意）', class:"large-form" %>
          </div>
        </div>
        <div class="submit-post">
          <%= f.submit "登録", class: "submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
