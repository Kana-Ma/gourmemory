<%= render 'shared/header' %>

<div class='main-content'>
  <div class='shop-detail'>
    <div class='name'>
      <span>
        ログイン
      </span>
    </div>
    <div class='login-flash-message'>
      <div class='flash'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    </div>
    <div class='form-area'>
      <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :email, 'メールアドレス' %>
          </div>
          <div class='form-size'>
            <%= f.email_field :email, class:"small-form", autofocus: true %>
          </div>
        </div>
        <div class='form-section'>
          <div class='form-name'>
            <%= f.label :password, 'パスワード' %>
          </div>
          <div class='form-size'>
            <%= f.password_field :password, class:"small-form", placeholder:"6文字以上の半角英数字" %>
          </div>
        </div>
        <div class="submit-post">
          <%= f.submit "ログイン", class: "submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
